<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/lumen/bootstrap.min.css">
    <!--<link rel="stylesheet" href="http://localhost/bootswatch/lumen.css">-->
    {% block stylesheets %}{% endblock %}

</head>
<body>
{% if not app.user %}
    <script>window.location.href = "/login"</script>
{% else %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="{{ path('home') }}">NL</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('client_new') }}">Nouvelle vente</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('read_produit') }}">Stock</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('categorie_index') }}">Produit</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="#">Ventes</a>
                </li>
            </ul>
            <form  action="{{ path('logout') }}" >
                <button type="submit" class="btn btn-primary">Deconnexion</button>
            </form>
        </div>
    </nav>
    <div class="container">
        {% block body %}{% endblock %}
    </div>
{% endif %}

{% block javascripts %}{% endblock %}
</body>
</html>
