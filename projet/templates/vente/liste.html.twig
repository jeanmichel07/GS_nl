{% extends 'base.html.twig' %}

{% block title %}stock{% endblock %}

{% block body %}
        <br>
    <h2 class="text-info" align="center" style="font-family: Times New Roman"><b>LISTE DE VENTE</b></h2>
    <table class="table" style="font-family: Times New Roman; text-align: center; border: 2px solid #c6c6c6; border-radius: 6px;">
        <thead>
        <tr>
            <td  style="border: 4px solid ;"><h4 class="text">Nom de client:</h4></td>
            <td  style="border: 4px solid "><h4 class="text">Produit:</h4></td>
            <td  style="border: 4px solid ;"><h4 class="text">Marque:</h4></td>
            <td  style="border: 4px solid ;"><h4 class="text">Date:</h4></td>
            <td  style="border: 4px solid ;"><h4 class="text">Prix:</h4></td>
        </tr>
        </thead>
        <tbody>
        {% for l in ln %}
        <tr>
            <td style="border: 2px solid ;"><b>{{ l.commande.client.nomComplet }}</b></td>
            <td style="border: 2px solid ;">{{ l.produit.categorie.nomCategorie }}</td>
            <td style="border: 2px solid ;">{{ l.produit.marque }}</td>
            <td style="border: 2px solid ;">{{ l.commande.dateAchat | date('d-m-Y') }}</td>
            <td style="border: 2px solid ;">{{ l.produit.prix }}</td>
        </tr>
        {% else %}
            <tr>
                <td colspan="4">Mbola tsisy vaovao</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}