<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://bootswatch.com/4/lumen/bootstrap.min.css">
    <!--<link rel="stylesheet" href="http://localhost/bootswatch/lumen.css">-->
    <title>login</title>
    <style>
        .card{
            margin-top: 120px;

        }
        body{
            background: #313131;
        }
        .err{
            font-size: 16px;
            color: #C8030C;
        }
    </style>
</head>

<body>
<center>
    {% if app.user %}
        <script>window.location.href = "/"</script>
    {% endif %}

    <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
        <div class="card-header">GESTION DE STOCK NL_TECHNOLOGY</div>
        <div class="card-body">
            {% if error %}
                {#{{ error.messageKey | trans(error.messagedata, 'security') }}#}
                <p class="err">Pseudo ou mot de passe incorrect</p>
            {% endif %}
            <form action="" method="post">
                <table>
                    <tr>
                        <td><img src="https://cdn0.iconfinder.com/data/icons/user-icon-profile-businessman-finance-vector-illus/100/19-1User-512.png" width="23px"></td>
                        <td><div class="col-sm-10"><input type="text" name="_username" value="{{ last_username }}" placeholder="Pseudo..."></div></td>
                    </tr><br>
                    <tr>
                        <td><img src="https://image.flaticon.com/icons/png/512/56/56255.png" width="22px"></td>
                        <td><div class="col-sm-10"><input type="password" name="_password" placeholder="Mots de passe...."></div></td>
                    </tr>
                </table>
                <br>
                <button type="submit" class="btn btn-secondary">Connexion</button>
            </form>
        </div>
    </div>
</center>
</body>
</html>